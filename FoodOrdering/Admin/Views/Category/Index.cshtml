@model IEnumerable<FoodOrdering.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "_AdminLayout";
}

<h1>Category</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Name</label>
                <input name="Name" class="form-control" />
              
            </div>
            <div class="form-group">
                <label  class="control-label">Img</label>
                <input name="Img" class="form-control" type="file"/>
            </div>
            <div class="form-group">
                <input type="radio" name="IsActive" value="true" /> Is Active

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>




    <div class="col-md-8">
<table class="table">
    <thead>
        <tr>
            <th>
               Id
            </th>
            <th>
                Name
            </th>
            <th>
                Is Active
            </th>
            <th>
                CreatedDate
            </th>
            <th>
                Imge
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
               @item.Name
            </td>
            <td>
                @item.IsActive
            </td>
            <td>
                @item.CreatedDate
            </td>
            <td>
                 <img width="60px" src="~/img/category/@item.ImgeUrl" alt="Not Found" />
            </td>
            <td class="me-5">
                            <a class="btn btn-primary rounded-3 me-3" asp-action="Edit" asp-route-id="@item.Id">
                                <i class="icofont icofont-pencil"></i>
                            </a>
                            <a class="btn btn-danger rounded-3 me-4" asp-action="Delete" asp-route-id="@item.Id">
                                <i class="icofont icofont-trash"></i>
                            </a>
            </td>
        </tr>
}
    </tbody>
</table>
    </div>
</div>
 <div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
