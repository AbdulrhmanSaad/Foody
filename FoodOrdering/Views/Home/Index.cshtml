                    </div>
                </div>
                <div class="col-lg-6 text-start text-lg-end wow slideInRight" data-wow-delay="0.1s">
                    <ul class="nav nav-pills d-inline-flex justify-content-end mb-5">
                        <li class="nav-item me-2">
                            <a class="btn btn-outline-primary border-2" data-bs-toggle="pill" href="#tab-1" data-category="3">Pizza</a>
                        </li>
                        <li class="nav-item me-2">
                            <a class="btn btn-outline-primary border-2" data-bs-toggle="pill" href="#tab-2" data-category="2">Burger </a>
                        </li>
                        <li class="nav-item me-0">
                            <a class="btn btn-outline-primary border-2" data-bs-toggle="pill" href="#tab-3" data-category="1">Juice</a>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="tab-content">
                <div class="tab-pane fade show p-0 mt-5 active">
                    <div id="tab-1" class="row g-4">
                    </div>
                    <div id="tab-2" class="row g-4">
                    </div>
                    <div id="tab-3" class="row g-4">
                    </div>
                    <div id="start" class="row g-4">
                        @foreach (var product in Model)
                        {
                            <div class="col-xl-3 col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                                <div class="product-item">
                                    <div class="position-relative bg-light overflow-hidden">
                                        <img class="img-fluid w-100" src="/img/Products/@product.ImgeUrl" alt="" style="height:258px">
                                        <div class="bg-secondary rounded text-white position-absolute start-0 top-0 m-4 py-1 px-3">@product.Quantity</div>
                                    </div>
                                    <div class="text-center p-4">
                                        <a class="d-block h5 mb-2" asp-controller="Product" asp-action="Details" asp-route-id="@product.Id">@product.Name</a>
                                        <span class="text-body">@product.Price EGP</span>
                                    </div>
                                    <div class="d-flex border-top">
                                        <small class="w-50 text-center border-end py-2">
                                            <a class="text-body" asp-controller="Product" asp-action="Details" asp-route-id="@product.Id"><i class="fa fa-eye text-primary me-2"></i>View detail</a>
                                        </small>
                                        <small class="w-50 text-center py-2">
                                            <a class="text-body"onclick="add(@product.Id)"><i class="fa fa-shopping-bag text-primary me-2"></i>Add to cart</a>
                                        </small>
                                    </div>
                                </div>
                            </div>
                        }
                        <div class="col-12 text-center">
                            <a class="btn btn-primary rounded-pill py-3 px-5" asp-action="GetAll" asp-controller="Product">Browse More Products</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>




    </div>
</div>
